/* pages/show_product/show_product.wxss */
.container{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: #EAEAEA;
}

/*头部样式（卖家信息展示）*/
.header{
  height: 150rpx;
  background: white;
  width: 100%;
}

.header-left{
  height: 100%;
  width: 60%;
  float: left;
}

.header-right{
  height: 100%;
  width:35%;
  float: right;
}

.seller-photo{
  height: 100%;
  width: 150rpx;
  margin-left: 20rpx;
  float: left;
  margin-top: 15rpx;
}

.photo{
  width: 80%;
  height: 80%;
  border-radius: 100%;
  display: block;
}

.seller-profile{
  float: left;
  max-width: 250rpx;
  height: 100%;
}

.seller-name{
  margin: 20rpx 0 0 20rpx;
  max-width: 250rpx;
  height: 50rpx;
  font-size: 30rpx;
  overflow: hidden;
}

.sell-time{
  margin: 30rpx 0 0 20rpx;
  font-size: 25rpx;
  color: gray;
}

.contact-btn{
  background: #71C671	;
  color: white;
  margin:40rpx 0 0 40rpx;
}

/*商品展示样式*/
.product-container{
  width:100%;
  margin-top: 30rpx;
  background: white;
}

.product-item{
  margin: 10rpx 0 0 20rpx;
}

.product-title{
  font-size: 40rpx;
  font-weight: bold;
}

.product-price{
  color:#EE4000;
  font-size: 40;
  margin-top: 20rpx;
}

.product-type, .product-detail1, .product-detail2{
  float: left;
  background: #FF7256;
  color: white;
  padding: 5rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.product-detail1{
  background: #FFA07A;
  margin-left: 20rpx;
}
.product-detail2{
  background: #FFD39B;
   margin-left: 20rpx;
}

.product-profile{
  margin-top: 20rpx;
}

.product-photo{
  margin-top: 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

/*评论样式*/
.comment-container{
  width: 100%;
  background: white;
  margin-top:30rpx;
}

.comment-title{
  margin: 10rpx 0 0 20rpx;
}

.message-input{
  margin: 10rpx 0 0 20rpx;
}


